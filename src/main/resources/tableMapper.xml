<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
<mapper namespace="com.mm.mybatis.TablePrototypeManager.Table" >

    <select id="findAll" parameterType="map" resultType="map">
		SELECT ${columns} FROM #{tableName}
    </select>
    
    <select id="findById" parameterType="map" resultType="map">
		SELECT * FROM #{tableName} where _id = #{id}
    </select>
    
    <insert id="insert" parameterType="map">
       INSERT INTO #{tableName} 
       		 VALUES (#{_type}, #{_name}, #{_name_cn}, #{_data_type}, #{_max_len}, #{_owner}, #{_html})
    </insert>
    
    <update id="update" parameterType="com.mm.mybatis.TablePrototype">
       UPDATE _table_prototype t SET _name_cn = #{_name_cn}, _html = #{_html}  WHERE _id = #{id}
    </update>
    
    <delete id="delete" parameterType="java.lang.String" >
        DELETE FROM _table_prototype  WHERE _owner = #{name}
    </delete>
    
</mapper>